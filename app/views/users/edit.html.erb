
<%= form_with model: @user, local: true do |f| %>
<div class="field">
  <%= f.label :username %>
  <%= f.text_field :username %>
  </div>
  <div class="field">
  <%= f.label :email %>
  <%= f.text_field :email %>
  </div>
  <div class="field">
  <%= f.label :profile %>
  <%= f.text_area :profile %>
  </div>
  <div class="field">
  <%= f.label :profile_image %>
  <%= f.attachment_field :profile_image %>
  </div>
  <div class="action">
  <%= f.submit %>
  </div>
<% end %>
