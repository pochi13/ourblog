<%= attachment_image_tag @user, :profile_image, fallback: "no-image.png", class: "profile_image is-rounded" %>
<%= @user.username %>
<% if @user.id == current_user.id %>
<%= @user.email %>
<%= link_to "編集", edit_user_path(@user), class: "button is-primary" %>
 <% end %>
<%= @user.profile %>

<% @user.blogs.each do |blog|%>
<%= link_to blog_path(blog) do %>
<%= attachment_image_tag blog, :image, fallback: "no-image.png",class: "mini-image" %>
<% end %>

<%= link_to blog_path(blog), class: "panel-block" do %>
このブログを見る
<% end %>

<% if @user.id == current_user.id %>
<%= link_to edit_blog_path(blog), class: "panel-block" do %>
このブログを編集する
<% end %>

<%= link_to blog_path(blog), method: :delete, data: {confirm: "削除しますか？"}, class: "panel-block" do %>
このブログを削除する
<% end %>
<% end %>
<%= blog.updated_at.strftime("%Y-%m-%d %H:%M") %>更新
<% end %>
