<div class="row">
  <% @users.each do |user|%>
    <div class="col-4">
      <div class="card" >
        <%= link_to blog_path(user) do %>
          <%= attachment_image_tag user, :profile_image, fallback: "no-image.png",class: "card-img-top" %>
          <% end %>
        <div class="card-body">
          <h5 class="card-title">
          <%=link_to user.username, user_path(user) %><br>
          投稿数：<%= user.blogs.count %>
        </div>
      </div>
  </div>
   <% end %>
</div>

       