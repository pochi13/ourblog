<%= form_with(url: search_blogs_path, local: true, method: :get, class: "search-form") do |form| %>
  <%= form.text_field :keyword, placeholder: "投稿を検索する", class: "search-input" %>
  <%= form.submit "検索", class: "search-btn" %>
<% end %>


<% @blogs.each do |blog|%>
<%= link_to blog_path(blog) do %>
 <%= attachment_image_tag blog, :image %>
 <% end %>
 <%= link_to user_path(blog.user.id) do %>
 <%= attachment_image_tag blog.user, :profile_image ,fallback: "no-image.png" %>
 <% end %>
 <%= link_to blog.user.username,user_path(blog.user.id) %>
 <%= blog.updated_at.strftime("%Y-%m-%d %H:%M") %>更新
<% end %>
