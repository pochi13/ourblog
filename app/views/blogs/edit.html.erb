
<%= form_with model: @blog, local: true do |f| %>
 <div class="field">
  <%= f.label :title %>
  <%= f.text_field :title %>
    </div>
 <div class="field">
  <%= f.label :body %>
  <%= f.text_area :body %>
    </div>
 <div class="field">
  <%= f.label :image %>
  <%= f.attachment_field :image %>
  </div>
 <div class="action">
  <%= f.submit %>
  </div>

<% end %>
